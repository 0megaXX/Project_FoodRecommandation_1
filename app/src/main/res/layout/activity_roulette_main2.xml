<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.roulette.RouletteActivity2"
    android:orientation="vertical"
    android:background="@drawable/roulette_test_background">
    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/roulette_sign2"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp"
        android:layout_weight="1">
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        tools:context=".presentation.roulette.rouletteMain"
        android:background="@drawable/roulette_microwave"
        android:layout_weight="1">
        <!--android:layout_marginTop="280dp"-->
        <LinearLayout
            android:layout_marginTop="45dp"
            android:layout_marginEnd="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <TextView
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:id="@+id/select_food_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="음식을 고르는 중"
                android:textSize="25sp"
                android:textColor="@color/text_color"/>
        </LinearLayout>
        <ImageView
            android:adjustViewBounds="true"
            android:id="@+id/micro_wave_front"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="39dp"
            android:layout_marginEnd="70dp"
            android:background="@drawable/roulette_microwave_front">
        </ImageView>
        <ImageButton
            android:id="@+id/spin_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="right|bottom"
            android:layout_marginEnd="5dp"
            android:background="@drawable/start_btn"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:orientation="vertical"
        android:background="@drawable/roulette_bottom">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:paddingStart="80dp"
            android:paddingEnd="80dp">
            <ImageButton
                android:id="@+id/Ifinish"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/action_btn"
                android:onClick="on_Click_sub"
                android:visibility="invisible"
        />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
