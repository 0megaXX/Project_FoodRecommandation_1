<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_100"
        android:tag="home">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/tb_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/rounded_toolbar_background"
            android:elevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="뭐먹지?"
            app:titleTextAppearance="@style/header_eb24"
            app:titleTextColor="@color/white"
            />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tb_main"
            android:padding="13dp">

            <LinearLayout
                android:id="@+id/linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_home_selected_food"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/white_rounded_coners"
                    android:backgroundTint="@color/secondary">

                    <ImageView
                        android:id="@+id/iv_home_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:backgroundTint="@color/white"
                        android:src="@drawable/ic_restaurant_fill"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                    </ImageView>

                    <TextView
                        android:id="@+id/tv_home_selected_food"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="결정한 음식 없습니다."
                        android:textAppearance="@style/text_r16"
                        android:textColor="@color/gray_100"

                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/iv_home_icon"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/white_rounded_coners">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:text="오늘은 무엇을 먹을까?"
                        android:textAppearance="@style/text_b20" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="10dp"
                        android:contentDescription="메뉴 추천">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_main_1"
                                android:layout_width="130dp"
                                android:layout_height="90dp"
                                android:layout_margin="5dp"
                                android:scaleType="centerCrop"
                                android:background="@drawable/rounded_corners" />

                            <ImageView
                                android:id="@+id/iv_main_2"
                                android:layout_width="130dp"
                                android:layout_height="90dp"
                                android:layout_margin="5dp"
                                android:scaleType="centerCrop"
                                android:background="@drawable/rounded_corners" />

                            <ImageView
                                android:id="@+id/iv_main_3"
                                android:layout_width="130dp"
                                android:layout_height="90dp"
                                android:layout_margin="5dp"
                                android:scaleType="centerCrop"
                                android:background="@drawable/rounded_corners" />
                        </LinearLayout>

                    </HorizontalScrollView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginVertical="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical"
                    android:background="@drawable/white_rounded_coners">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="음식 카테고리"
                            android:textAppearance="@style/text_b20" />

<!--                        <TextView-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:layout_marginEnd="25dp"-->
<!--                            android:gravity="center|right"-->
<!--                            android:text="더보기 >"-->
<!--                            android:textSize="15sp" />-->

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <include
                            android:id="@+id/layout_food_category_korea"
                            layout="@layout/layout_food_category"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="30dp"
                            app:foodCategoryName="@{`한식`}"
                            app:foodImage="@{@drawable/foodcategory_1}"
                            app:foodTag="@{`koreaFood`}" />

                        <include
                            android:id="@+id/layout_food_category_china"
                            layout="@layout/layout_food_category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="30dp"
                            app:foodCategoryName="@{`중식`}"
                            app:foodImage="@{@drawable/foodcategory_2}"
                            app:foodTag="@{`chinaFood`}" />

                        <include
                            android:id="@+id/layout_food_category_japan"
                            layout="@layout/layout_food_category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:foodCategoryName="@{`일식`}"
                            app:foodImage="@{@drawable/foodcategory_3}"
                            app:foodTag="@{`japanFood`}" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <include
                            android:id="@+id/layout_food_category_west"
                            layout="@layout/layout_food_category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="30dp"
                            app:foodCategoryName="@{`양식`}"
                            app:foodImage="@{@drawable/foodcategory_4}"
                            app:foodTag="@{`westFood`}" />


                        <include
                            android:id="@+id/layout_food_category_fast"
                            layout="@layout/layout_food_category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="30dp"
                            app:foodCategoryName="@{`패스트푸드`}"
                            app:foodImage="@{@drawable/foodcategory_5}"
                            app:foodTag="@{`fastFood`}" />

                        <include
                            android:id="@+id/layout_food_category_asian"
                            layout="@layout/layout_food_category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:foodCategoryName="@{`아시안음식`}"
                            app:foodImage="@{@drawable/foodcategory_6}"
                            app:foodTag="@{`asianFood`}" />
                    </LinearLayout>
                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_main_food_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_rounded_coners">

                    <ImageView
                        android:id="@+id/iv_main_food_question"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/rounded_corners"
                        android:scaleType="centerCrop"
                        android:src="@drawable/main_food"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:text="나의 맞춤형 음식 고르기"
                        android:textAppearance="@style/text_b20"
                        app:layout_constraintStart_toEndOf="@+id/iv_main_food_question"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="22dp"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1"
                        android:text="나에게 딱 맞는 음식을 골라보세요."
                        android:textAppearance="@style/text_m12"
                        android:textColor="@color/gray_500"
                        app:layout_constraintStart_toEndOf="@+id/iv_main_food_question"
                        app:layout_constraintTop_toBottomOf="@+id/textView" />

                    <ImageView
                        android:id="@+id/iv_main_food_question_forward"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/ic_forward"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>